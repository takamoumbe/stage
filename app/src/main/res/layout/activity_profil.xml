<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        app:cardBackgroundColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:textStyle="normal|bold|italic"
                        android:layout_height="wrap_content"
                        android:text="Sigs" />
                    <TextView
                        android:id="@+id/textiew5"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:textSize="23sp"
                        android:textColor="@android:color/black"
                        android:textStyle="normal|bold"
                        android:layout_height="wrap_content"
                        android:text="Update your information" />

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:id="@+id/modifCli"
                        android:layout_marginTop="20dp"
                        android:layout_width="250dp"
                        app:cardCornerRadius="@dimen/cardview_default_radius"
                        app:cardBackgroundColor="#4285F4"
                        android:layout_height="40dp" >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_marginLeft="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/gogradius"
                                    app:srcCompat="@drawable/update" />
                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:padding="10dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:text="Modifier vos informations" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/new_name"
                        android:layout_marginTop="40dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="New name" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:cursorVisible="true"
                        android:longClickable="true"
                        android:shadowDx="1.2"
                        android:shadowDy="1.2"
                        android:shadowRadius="1.5"
                        android:focusedByDefault="true"
                        android:textCursorDrawable="@drawable/curseur"
                        android:textColor="@android:color/black"
                        android:background="@drawable/avantclique"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/txtViw6"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="new matricule" />

                    <EditText
                        android:id="@+id/matricule"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@drawable/curseur"
                        android:background="@drawable/avantclique"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/txtViwnn6"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:text="New email" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@drawable/curseur"
                        android:background="@drawable/avantclique"
                        android:ems="10"
                        android:inputType="textPersonName" />

                    <TextView
                        android:id="@+id/txtVniwnn6"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:text="New password" />

                    <EditText
                        android:id="@+id/password"
                        android:maxLength="8"
                        android:layout_width="match_parent"
                        android:background="@drawable/avantclique"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_height="40dp"
                        android:textCursorDrawable="@drawable/curseur"
                        android:ems="10"
                        android:hint="6+ characters"
                        android:inputType="textPersonName"/>
                    <TextView
                        android:id="@+id/txtVniwfnn6"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:text="Old password" />

                    <EditText
                        android:id="@+id/lastPass"
                        android:maxLength="8"
                        android:layout_width="match_parent"
                        android:background="@drawable/avantclique"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:layout_height="40dp"
                        android:textCursorDrawable="@drawable/curseur"
                        android:ems="10"
                        android:hint="6+ characters"
                        android:inputType="textPersonName"/>

                    <Button
                        android:id="@+id/valider"
                        android:layout_marginTop="70dp"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/white"
                        android:background="@drawable/radius"
                        android:textAllCaps="false"
                        android:textCursorDrawable="@drawable/buttonjolie"
                        android:shadowRadius="@android:integer/config_longAnimTime"
                        android:layout_height="wrap_content"
                        android:text="Update" />


                        <TextView
                            android:id="@+id/textView8"
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:textColor="#49A4F4"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:clickable="true"
                            android:text="Stop the operation" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@android:color/white"
                        android:layout_height="130dp" />
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@android:color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="550dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/containgogle"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            >

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_group24dp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="156dp"
                android:layout_height="122dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:textSize="10dp"
                android:paddingRight="5dp"
                android:transitionName="@android:string/autofill"
                android:paddingTop="30dp"
                android:text="Rassurez vous de la confidentialite de vos informations"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView12"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:paddingTop="30dp"
                android:background="@drawable/changelan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="French" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>