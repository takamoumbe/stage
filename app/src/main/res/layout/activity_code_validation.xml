<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".CodeValidation">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="562dp"
            app:cardBackgroundColor="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:text="Sigs"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="normal|bold|italic" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="40dp"
                            app:cardBackgroundColor="#4285F4"
                            app:cardCornerRadius="@dimen/cardview_default_radius">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="2dp"
                                        android:layout_weight="0.8"
                                        android:background="@drawable/gogradius"
                                        app:srcCompat="@drawable/lock" />

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.2"
                                        android:padding="10dp"
                                        android:text="Entrer le code de validation"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/white" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                        <EditText
                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/avantclique"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:focusedByDefault="true"
                            android:inputType="number"
                            android:longClickable="true"
                            android:shadowDx="1.2"
                            android:shadowDy="1.2"
                            android:shadowRadius="1.5"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textCursorDrawable="@drawable/curseur" />

                        <Button
                            android:id="@+id/modifier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/radius"
                            android:shadowRadius="@android:integer/config_longAnimTime"
                            android:text="Envoyer"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textCursorDrawable="@drawable/buttonjolie" />

                        <TextView
                            android:id="@+id/annuler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:textColor="#49A4F4"
                            android:padding="10dp"
                            android:text="Annuler L'operation"
                           />
                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@android:color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="549dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/containgogle"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            >

            <ImageView
                android:id="@+id/icone"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_keyboard_black_24dp" />

            <TextView
                android:id="@+id/infor"
                android:layout_width="156dp"
                android:layout_height="122dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:textSize="10dp"
                android:paddingRight="5dp"
                android:transitionName="@android:string/autofill"
                android:paddingTop="23dp"
                android:text="Vous allez recevoir le code par mail"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView12"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:paddingTop="23dp"
                android:background="@drawable/changelan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="French" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>